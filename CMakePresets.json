{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default-config",
      "binaryDir": "${sourceDir}/build/Release",
      "generator": "Ninja",
      "cacheVariables": {
        "BUILD_SHARED_LIBS": { "type": "BOOL", "value": true },
        "CMAKE_BUILD_TYPE": { "type": "STRING", "value": "Release" }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default-build",
      "configurePreset": "default-config"
    }
  ]
}
